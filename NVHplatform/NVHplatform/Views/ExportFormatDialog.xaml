<Window x:Class="NVHplatform.Views.ExportFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择导出格式"
        Height="150"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <TextBlock Text="请选择导出格式：" FontSize="16" Margin="0 0 0 10" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Content="PNG" Width="60" Margin="5" Click="Png_Click"/>
            <Button Content="MAT" Width="60" Margin="5" Click="Mat_Click"/>
            <Button Content="CSV" Width="60" Margin="5" Click="Csv_Click"/>
            <Button Content="取消" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
