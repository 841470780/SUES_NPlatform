<Window x:Class="NVHplatform.Views.InputFileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="请输入录音文件名"
        Height="170" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <StackPanel Margin="15">
        <TextBlock Text="请输入录音文件名：" FontSize="14" Margin="0,0,0,10"/>
        <TextBox x:Name="InputBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Width="60" Margin="5" Click="OK_Click"/>
            <Button Content="取消" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
